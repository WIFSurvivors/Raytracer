<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Slider Style -->
    <Style TargetType="Slider" x:Key="PrimarySliderStyle">
        <Setter Property="Width" Value="256"/>

            <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Slider">
                    <Grid>
                        <!-- Styled Background Track -->
                        <Border x:Name="TrackBackground" 
                                Background="{StaticResource WindowBackgroundColor}" 
                                BorderBrush="Transparent" 
                                CornerRadius="8" 
                                Height="16" 
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center" />

                        
                        <!-- Slider Track -->
                        <Track x:Name="PART_Track" Focusable="False">
                            <!-- Decrease Repeat Button -->
                            <Track.DecreaseRepeatButton>
                                <RepeatButton Command="Slider.DecreaseLarge" 
                                              Style="{x:Null}" 
                                              Background="{StaticResource ComponentBackgroundColor}" />
                            </Track.DecreaseRepeatButton>

                            <!-- Thumb -->
                            <Track.Thumb>
                                <Thumb x:Name="Thumb" Width="20" Height="16">
                                    <Thumb.Template>
                                        <ControlTemplate TargetType="Thumb">
                                            <Border x:Name="ThumbBorder" 
                                                    Background="White" 
                                                    BorderBrush="White" 
                                                    BorderThickness="2" 
                                                    CornerRadius="4">
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="ThumbBorder" Property="Background" Value="{StaticResource ComponentBackgroundColor}" />
                                                    <Setter TargetName="ThumbBorder" Property="BorderBrush" Value="{StaticResource ComponentBackgroundColor}" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Thumb.Template>
                                </Thumb>
                            </Track.Thumb>



                            <Track.IncreaseRepeatButton>
                                <RepeatButton Command="Slider.IncreaseLarge" 
                                     Background="{StaticResource ComponentBackgroundColor}">
                                    <RepeatButton.Style>
                                        <Style TargetType="RepeatButton">
                                            <Style.Setters>
                                                <!-- Set default background color here -->
                                                <Setter Property="Background" Value="{StaticResource ComponentBackgroundColor}" />
                                            </Style.Setters>
                                            <Style.Triggers>
                                                <!-- Change background on hover -->
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource ComponentPrimaryColor}" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </RepeatButton.Style>
                                </RepeatButton>
                            </Track.IncreaseRepeatButton>




                            <Track.Style>
                                <Style TargetType="Track">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                           
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Track.Style>
                            </Track>
                    </Grid>

                    <!-- Template Triggers -->
                    <ControlTemplate.Triggers>
                        <!-- Change colors on hover --><!--
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="TrackBackground" Property="Background" Value="{StaticResource ComponentPrimaryColor}" />
                        </Trigger>
                        -->
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
