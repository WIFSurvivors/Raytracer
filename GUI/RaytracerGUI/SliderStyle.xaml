<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Slider Style -->
    <Style TargetType="Slider" x:Key="SecondarySliderStyle">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Slider">
                    <Grid>
                        <!-- Background track -->
                        <Rectangle x:Name="TrackBackground" 
                               Fill="{StaticResource WindowBackgroundColor}" 
                               Stroke="Transparent" 
                               StrokeThickness="0" 
                               RadiusX="8" RadiusY="8"
                               Height="10"
                               VerticalAlignment="Center" />

                        <!-- Track (binds slider behavior) -->
                        <Track x:Name="PART_Track" Grid.Row="0" Focusable="False" Height="10" VerticalAlignment="Center">
                            <!-- Progress track -->
                            <Track.DecreaseRepeatButton>
                                <RepeatButton Command="Slider.DecreaseLarge" Style="{x:Null}" />
                            </Track.DecreaseRepeatButton>

                            <Track.Thumb>
                                <!-- Thumb (slider handle) -->
                                <Thumb x:Name="Thumb" Width="8" Height="16" VerticalAlignment="Center">
                                    <Thumb.Template>
                                        <ControlTemplate TargetType="Thumb">
                                            <Border x:Name="ThumbBorder" 
                                                Background="White" 
                                                BorderBrush="White" 
                                                BorderThickness="2" 
                                                CornerRadius="4">
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="ThumbBorder" Property="Background" Value="{StaticResource ComponentBackgroundColor}" />
                                                    <Setter TargetName="ThumbBorder" Property="BorderBrush" Value="{StaticResource ComponentBackgroundColor}" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Thumb.Template>
                                </Thumb>
                            </Track.Thumb>

                            <Track.IncreaseRepeatButton>
                                <RepeatButton Command="Slider.IncreaseLarge" Style="{x:Null}" />
                            </Track.IncreaseRepeatButton>
                        </Track>

                        <!-- Progress track overlay -->
                        <Rectangle x:Name="TrackFill" 
                               Fill="{StaticResource ComponentBackgroundColor}" 
                               Stroke="Transparent" 
                               StrokeThickness="0" 
                               RadiusX="8" RadiusY="8"
                               Height="10"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Width="{Binding Path=Value, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource SliderValueToWidthConverter}}" />
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Change colors on hover -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="TrackBackground" Property="Fill" Value="{StaticResource ComponentPrimaryColor}" />
                            <Setter TargetName="TrackFill" Property="Fill" Value="{StaticResource ComponentPrimaryColor}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
