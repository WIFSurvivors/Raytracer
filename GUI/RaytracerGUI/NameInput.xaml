<Window x:Class="RaytracerGUI.NameInputDialog"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Name" Height="150" Width="300">
    <Window.Resources>
    <ResourceDictionary>
        <ResourceDictionary.MergedDictionaries>
            <ResourceDictionary Source="GlobalStyles.xaml" />
            <ResourceDictionary Source="SliderStyle.xaml" />
        </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
    </Window.Resources>
    


    <StackPanel Margin="10">
        <TextBlock Text="Enter the name:" Margin="0,0,0,5" />
        <TextBox Name="txtName" Margin="0,0,0,10" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="75" Margin="5,0,0,0" Click="OKButton_Click" />
            <Button Content="Cancel" Width="75" Margin="5,0,0,0" Click="CancelButton_Click" />
        </StackPanel>
    </StackPanel>
</Window>