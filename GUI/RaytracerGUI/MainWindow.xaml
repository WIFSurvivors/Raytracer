<Window x:Class="RaytracerGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RaytracerGUI"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="720" Width="1280"
        MinHeight="720" MinWidth="1280" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="512"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- --> 
        <Grid Width="512" HorizontalAlignment="Left" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid VerticalAlignment="Center" Grid.Row="0">
                <Menu Background="{StaticResource WindowPrimaryColor}" Foreground="White" VerticalAlignment="Top" BorderBrush="{StaticResource WindowPrimaryColor}" BorderThickness="2"  >
                    <MenuItem Header="File" Width="168">
                        <MenuItem Header="Open" Click="clickOpen"/>
                        <MenuItem Header="Save" Click="clickSave"/>
                        <MenuItem Header="Import Scene" Click="clickImportScene"/>
                        <MenuItem Header="Export Scene" Click="clickExportScene" />
                        <MenuItem Header="Exit" Click="clickExit" />
                    </MenuItem>
                    <MenuItem Header="View" Width="168">
                        <MenuItem Header="Reset" />
                    </MenuItem>
                    <MenuItem Header="Settings" Width="168">
                        <MenuItem Header="Preferences" />
                        <MenuItem Header="About" />
                    </MenuItem>
                </Menu>
            </Grid>
            <!--Everything below Menu -->
            <Grid VerticalAlignment="Stretch" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!--Left Column -->
                <Grid VerticalAlignment="Stretch" Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!--Entities -->
                    <TreeView Background="{StaticResource ComponentBackgroundColor}" BorderBrush="{StaticResource WindowPrimaryColor}" BorderThickness="2" Grid.Row="0">
                        <TreeViewItem Header="xyz 1">
                            <TreeViewItem Header="xyz 1.1" />
                            <TreeViewItem Header="xyz 1.2">
                                <TreeViewItem Header="xyz 1.2.1" />
                            </TreeViewItem>
                        </TreeViewItem>
                        <TreeViewItem Header="xyz 2" />
                    </TreeView>
                    <!--Components -->
                    <ListBox Background="{StaticResource ComponentBackgroundColor}" BorderBrush="{StaticResource WindowPrimaryColor}" BorderThickness="2" Grid.Row="1">
                        <ListBoxItem Content="Test Item 1" />
                        <ListBoxItem Content="Test Item 2" />
                        <ListBoxItem Content="Test Item 3" />
                    </ListBox>
                </Grid>
                <!--Right Column -->
                <Grid VerticalAlignment="Stretch" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!--Entities -->
                    <TreeView Background="{StaticResource ComponentBackgroundColor}" BorderBrush="{StaticResource WindowPrimaryColor}" BorderThickness="2" Grid.Row="0">
                        <TreeViewItem Header="xyz 1">
                            <TreeViewItem Header="xyz 1.1" />
                            <TreeViewItem Header="xyz 1.2">
                                <TreeViewItem Header="xyz 1.2.1" />
                            </TreeViewItem>
                        </TreeViewItem>
                        <TreeViewItem Header="xyz 2" />
                    </TreeView>
                    <!--Components -->
                    <TreeView Background="{StaticResource ComponentBackgroundColor}" BorderBrush="{StaticResource WindowPrimaryColor}" BorderThickness="2" Grid.Row="1">
                        <TreeViewItem Header="xyz 1">
                            <TreeViewItem Header="xyz 1.1" />
                            <TreeViewItem Header="xyz 1.2">
                                <TreeViewItem Header="xyz 1.2.1" />
                            </TreeViewItem>
                        </TreeViewItem>
                        <TreeViewItem Header="xyz 2" />
                    </TreeView>
                </Grid>
            </Grid>
        </Grid>
        <!--Preview-->
        <Grid HorizontalAlignment="Stretch" Grid.Column="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="180" />
            </Grid.RowDefinitions>
            <!--Preview Picture-->
            <Border Grid.Row="0" Margin="5" BorderBrush="{StaticResource ComponentPrimaryColor}" BorderThickness="2">
                <Image  Source="/images/preview.png" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="UniformToFill"/>
            </Border>
            <!--Preview Buttons-->
            <Grid Width="400" Height="200" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Style="{StaticResource PrimaryButtonStyle}" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">
                    <Image Source="/images/arrow-left.png" Width="30" Height="30"/>
                </Button>
                <Button Style="{StaticResource PrimaryButtonStyle}" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center">
                    <Image Source="/images/arrow-right.png" Width="30" Height="30"/>
                </Button>
                <Button Style="{StaticResource PrimaryButtonStyle}" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center">
                    <Image Source="/images/arrow-up.png" Width="30" Height="30"/>
                </Button>
                <Button Style="{StaticResource PrimaryButtonStyle}" Grid.Row="1" Grid.Column="2" VerticalAlignment="Top">
                    <Image Source="/images/arrow-down.png" Width="30" Height="30"/>
                </Button>
                <Button Style="{StaticResource PrimaryButtonStyle}" Grid.Row="1" Grid.Column="1" VerticalAlignment="Top">
                    <Image Source="/images/arrow-rotate-x.png" Width="30" Height="30"/>
                </Button>
                <Button Style="{StaticResource PrimaryButtonStyle}" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top">
                    <Image Source="/images/arrow-rotate-y.png" Width="30" Height="30"/>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Window>